<select resultType="String" id="login" parameterType="log">
select id from login
where id=#{id} and pw=#{pw}
</select>

<select resultType="log" id="viewlogin" parameterType="log">
select * from login
where id=#{id} and pw=#{pw}
</select>


<insert id="insertmember">
insert into login(id, pw, name)
values(#{id}, #{pw}, #{name})

</insert>

 
